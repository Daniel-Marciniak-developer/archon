# Archon Backend Environment Variables
# Copy this file to .env and fill in your values

# Application Configuration
APP_ENV=development
DEBUG=true

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:5173/auth/callback/github

# Database Configuration
# For Docker: use service names (postgres, redis)
# For local: use localhost
DATABASE_URL_DEV=postgresql://archon_user:archon_password@localhost:5432/archon_dev
DATABASE_URL_ADMIN_DEV=postgresql://archon_user:archon_password@localhost:5432/archon_dev
DATABASE_URL_PROD=postgresql://archon_user:archon_password@localhost:5432/archon_prod
DATABASE_URL_ADMIN_PROD=postgresql://archon_user:archon_password@localhost:5432/archon_prod

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Stack Auth Configuration
STACK_AUTH_PROJECT_ID=your_stack_auth_project_id
STACK_AUTH_PUBLISHABLE_CLIENT_KEY=your_stack_auth_publishable_key
STACK_SECRET_SERVER_KEY=your_stack_auth_secret_key
STACK_AUTH_JWKS_URL=https://api.stack-auth.com/api/v1/projects/your_project_id/.well-known/jwks.json

# Security Configuration
ENCRYPTION_KEY=your_encryption_key_here

# Monitoring
PROMETHEUS_MULTIPROC_DIR=/tmp

# DataButton Configuration (if using DataButton platform)
DATABUTTON_PROJECT_ID=your_project_id
DATABUTTON_CUSTOM_DOMAIN=
DATABUTTON_EXTENSIONS=[]
DATABUTTON_TOKEN=your_token
APP_ENV=production  # Set to 'production' for production deployment
DEBUG=true

# Production Configuration
PRODUCTION_DOMAIN=your-domain.com

# GitHub OAuth Configuration (required for production)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=https://your-domain.com/routes/github/callback

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here_make_it_long_and_random

# External APIs
OPENAI_API_KEY=your_openai_api_key_if_needed

# Logging
LOG_LEVEL=INFO
